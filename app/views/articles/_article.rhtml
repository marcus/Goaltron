<tr class="<%= article.status %>" id="article_<%= article.id %>">
  <td><%= image_tag "#{status_icon[article.status][1]}", :class => "#{status_icon[article.status][0]} icon", :title => "This article is #{article.status}", :alt => "#{article.status}" %></td>
  <td class="article_title"><%= link_to(article.title, {:action => 'edit', :id => article}) %></td>
  <!--<td class="ccount">-->

  </td>
  <td><span class="date"><%= published_at_for article %></span></td>
  <td><%= article.published? ? link_to(image_tag('zoom.png', :style => 'vertical-align: middle'), :controller => 'articles', :action => 'show', :id => article) : '&nbsp;' %></td>
</tr>
